<?xml version="1.0" encoding="UTF-8"?>
<form-config
	xmlns="http://www.riotfamily.org/schema/forms/form-config"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.riotfamily.org/schema/forms/form-config
		http://www.riotfamily.org/schema/forms/form-config-6.3.xsd">

	<form id="title">
		<checkbox bind="showHeadline" default="checked" />
		<checkbox bind="showSubline" default="checked" />
		<textfield bind="anchor" regex="[A-Za-z0-9_-]*" />
	</form>
	
	<form id="image">
		<image-upload bind="image" store="defaultFileStore" 
			width-property="imageWidth" required="true" />
			
		<selectbox bind="class" required="true" 
			label-message-key="image.class." append-label="true">
			<model class="org.riotfamily.forms.element.support.select.StaticOptionsModel">
				<set-property name="commaDelimitedValues" value="block,right,left" />
			</model>
		</selectbox>
		<checkbox bind="clear" />
		<textarea bind="caption" rows="3" />
	</form>
	
	<form id="paragraph">
		<checkbox bind="clear" />
	</form>
	
	<form id="extra-box">
		<selectbox bind="className" required="true">
			<model class="org.riotfamily.forms.element.support.select.StaticOptionsModel">
				<set-property name="commaDelimitedValues" value="normal,filled,important" />
			</model>
		</selectbox>
		<image-upload bind="image" store="defaultFileStore" />
	</form>
	
	<form id="html">
		<textarea bind="html" />
	</form>
		
</form-config>