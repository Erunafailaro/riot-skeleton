<?xml version="1.0" encoding="UTF-8"?>
<form-config
	xmlns="http://www.riotfamily.org/schema/forms/form-config"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.riotfamily.org/schema/forms/form-config
		http://www.riotfamily.org/schema/forms/form-config-6.3.xsd">

	<form id="title">
		<checkbox bind="showHeadline" default="checked" />
		<checkbox bind="showSubline" default="checked" />
	</form>
	
	<form id="image">		
		<image-upload bind="image" store="defaultFileStore" required="true" />
		<selectbox bind="class" required="true" 
			label-message-key="imageComponent.class." append-label="true">
			<model class="org.riotfamily.forms.element.support.select.StaticOptionsModel">
				<set-property name="commaDelimitedValues" value="block,right,left" />
			</model>
		</selectbox>
		<checkbox bind="clear" />
		<textfield bind="link" max-length="255" />
		<textfield bind="caption" max-length="255" />		
	</form>
	
	<form id="paragraph">
		<checkbox bind="clear" />
	</form>
	
	<form id="teaser">
		<image-upload bind="image" store="defaultFileStore" />
		<textfield bind="imageLink" max-length="255" />
	</form>
		
</form-config>