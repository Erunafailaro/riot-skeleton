<?xml version="1.0" encoding="ISO-8859-1"?>

<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
    version="2.4">
        
    <!-- Config locations for the application context -->
    <context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			classpath*:/META-INF/riot/application-context.xml,
			/WEB-INF/application-context.xml
		</param-value>
	</context-param>
	
	<!-- Servlet filter to use UTF-8 for request and responses -->
	
	<filter>
		<filter-name>encoding-filter</filter-name>
		<filter-class>org.riotfamily.common.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>utf-8</param-value>
		</init-param>
		<init-param>
			<param-name>forceRequestEncoding</param-name>
			<param-value>true</param-value>
		</init-param>
		<init-param>
			<param-name>forceResponseEncoding</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter>
	
	<!-- 
	  - Filter that prevents URLs from beeing rewritten if the request is 
	  - originated by a search engine robot. 
	  -->
	<filter>
		<filter-name>bot-session-filter</filter-name>
		<filter-class>org.riotfamily.common.web.filter.BotSessionFilter</filter-class>
	</filter>
	
	<filter>
		<filter-name>stamp-filter</filter-name>
		<filter-class>org.riotfamily.common.web.filter.CacheStampedResourcesFilter</filter-class>
	</filter>
	
	<filter>
		<filter-name>website-servlet-filter</filter-name>
		<filter-class>org.riotfamily.common.web.filter.PluginFilter</filter-class>
		<init-param>
			<param-name>exclude</param-name>
			<param-value>/riot/**</param-value>
		</init-param>
	</filter>
	 
	<filter-mapping>
		<filter-name>encoding-filter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<filter-mapping>
		<filter-name>bot-session-filter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<filter-mapping>
		<filter-name>stamp-filter</filter-name>
		<url-pattern>/style/*</url-pattern>
	</filter-mapping>
	
	<filter-mapping>
		<filter-name>website-servlet-filter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	
	<!-- DispatcherServlet for the actual website  -->
	
	<servlet>
		<servlet-name>website</servlet-name>
		<servlet-class>org.riotfamily.common.web.servlet.ReloadableDispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>
				classpath*:/META-INF/riot/website-servlet.xml,
				/WEB-INF/website-servlet.xml
			</param-value>
		</init-param>
		<load-on-startup>2</load-on-startup>
	</servlet>
	
	<!-- DispatcherServlet for the Riot Admin-Pages  -->
	
	<servlet>
		<servlet-name>riot</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>
				classpath*:/META-INF/riot/riot-servlet.xml,
				/WEB-INF/riot-config/riot-servlet.xml
			</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
	<!-- Map all *.html requests to the website servlet  -->
	
	<servlet-mapping>
		<servlet-name>website</servlet-name>
		<url-pattern>*.html</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>website</servlet-name>
		<url-pattern>*.css</url-pattern>
	</servlet-mapping>
	
	<!-- Riot is mapped to /riot/* -->
	
	<servlet-mapping>
		<servlet-name>riot</servlet-name>
		<url-pattern>/riot/*</url-pattern>
	</servlet-mapping>
			
</web-app>