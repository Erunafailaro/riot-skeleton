<?xml version="1.0" encoding="UTF-8"?>
<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:component="http://www.riotfamily.org/schema/components/controller"
	xmlns:template="http://www.riotfamily.org/schema/website/template"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
		http://www.riotfamily.org/schema/components/controller
		http://www.riotfamily.org/schema/components/controller-6.5.xsd
		http://www.riotfamily.org/schema/website/template
		http://www.riotfamily.org/schema/website/template-6.5.xsd">

	<!-- ========== -->
	<!-- Page types -->
	<!-- ========== -->

	<template:definition id="locale-chooser" view-name="templates/default.ftl">
		<template:insert slot="navigation" url="/inc/navigation.html" />
		<template:insert slot="content" url="/inc/content.html" />
		<template:insert slot="extra" url="/inc/extra.html" />
	</template:definition>
	
	<template:definition id="default" view-name="templates/default.ftl">
		<template:insert slot="navigation" url="/inc/navigation.html" />
		<template:insert slot="content" url="/inc/content.html" />
		<template:insert slot="extra" url="/inc/extra.html" />
	</template:definition>

	<!-- ======== -->
	<!-- Includes -->
	<!-- ======== -->

	<bean name="/inc/navigation.html" class="org.riotfamily.pages.PageController">
		<property name="viewName"><value>navigation.ftl</value></property>
	</bean>

	<!-- =============== -->
	<!-- Component Lists -->
	<!-- =============== -->

	<component:list name="/inc/content.html"
			validComponentTypes="paragraph,headline,image,gallery,table"
			initialComponentTypes="headline,paragraph" />

	<component:list name="/inc/gallery-components.html"
			validComponentTypes="greybox-image,gallery"
			initialComponentTypes="greybox-image"
			minComponents="1" />

	<component:list name="/inc/extra.html"
			validComponentTypes="extra-box,inherit" />

</beans>
