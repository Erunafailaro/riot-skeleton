<?xml version="1.0" encoding="UTF-8"?>
<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:p="http://www.riotfamily.org/schema/pages/page"
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.springframework.org/schema/util
		http://www.springframework.org/schema/util/spring-util-2.0.xsd
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
		http://www.riotfamily.org/schema/pages/page
		http://www.riotfamily.org/schema/pages/page-6.5.xsd">

	<import resource="website-controllers.xml" />

	<bean class="org.springframework.web.servlet.handler.BeanNameUrlHandlerMapping">
		<property name="order" value="1" />
		 <property name="interceptors">
			<list>
				<ref bean="noCacheInterceptor" />
			</list>
		</property>
	</bean>

	<bean class="org.riotfamily.pages.mapping.PageHandlerMapping">
		<constructor-arg ref="pageDao" />
		<constructor-arg ref="pageLocationResolver" />
		<property name="defaultPageHandler" ref="default" />
		<property name="interceptors">
			<list>
				<ref bean="noCacheInterceptor" />
			</list>
		</property>
	</bean>

	<bean class="org.riotfamily.common.web.view.freemarker.RiotFreeMarkerViewResolver">
		<property name="cache" value="${website-servlet.cacheViews=true}" />
		<property name="exposeRequestAttributes" value="true" />
	</bean>

	<p:setup id="pageSetup" dao="pageDao" tx="transactionManager" locales="websiteLocales">
 		<p:page path-component="index" system="false">
	 		<p:page path-component="subpage" system="false" />
 		</p:page>
 	</p:setup>

</beans>