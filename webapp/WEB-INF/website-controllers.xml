<?xml version="1.0" encoding="UTF-8"?>
<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:mvc="http://www.riotfamily.org/schema/pages/mvc"
	xmlns:template="http://www.riotfamily.org/schema/pages/template"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
		http://www.riotfamily.org/schema/pages/mvc
		http://www.riotfamily.org/schema/pages/mvc-6.3.xsd
		http://www.riotfamily.org/schema/pages/template
		http://www.riotfamily.org/schema/pages/template-6.3.xsd">
			
	<!-- ========== -->
	<!-- Page types -->
	<!-- ========== -->
	
	<template:definition id="default" view-name="templates/default.ftl">
		<template:insert slot="head" url="/inc/metadata.html" />
		<template:insert slot="menu" url="/inc/menu.html" />
		<template:insert slot="content" url="/inc/content.html" />
		<template:insert slot="extra" url="/inc/extra.html" />
	</template:definition>
	
	<!-- ======== -->
	<!-- Includes -->
	<!-- ======== -->

	<!-- Controller that renders page meta data (title, keywords, description) -->
	<bean name="/inc/metadata.html" class="org.riotfamily.pages.page.meta.MetaDataController">
		<property name="metaDataProvider">
			<bean class="org.riotfamily.pages.page.meta.PageMetaDataProvider" />
		</property>
	</bean>
	
	<bean name="/inc/menu.html" class="org.riotfamily.pages.menu.MenuController">
		<property name="menuBuilder"><ref bean="pageMenuBuilder" /></property>
		<property name="viewName"><value>nav.ftl</value></property>
	</bean>
		
	<!-- =============== -->
	<!-- Component Lists -->
	<!-- =============== -->
	
	
	<mvc:component-list name="/inc/content.html" 
			validComponentTypes="paragraph,title,image"
			initialComponentTypes="title,paragraph" />
	
	<mvc:component-list name="/inc/extra.html" 
			validComponentTypes="extra-box,html,inherit" />
	
</beans>
