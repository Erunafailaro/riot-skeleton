<?xml version="1.0" encoding="UTF-8"?>
<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.springframework.org/schema/util
		http://www.springframework.org/schema/util/spring-util-2.0.xsd
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<import resource="website-controllers.xml" />

	<bean id="themeChangeInterceptor" class="org.springframework.web.servlet.theme.ThemeChangeInterceptor">
	</bean>
	
	<bean class="org.springframework.web.servlet.handler.BeanNameUrlHandlerMapping">
		<property name="order" value="1" />
		 <property name="interceptors">
			<list>
				<ref bean="noCacheInterceptor" />
				<ref bean="themeChangeInterceptor" />
			</list>
		</property>
	</bean>
	
	<bean class="org.riotfamily.pages.mapping.PageHandlerMapping">
		<constructor-arg ref="pageDao" />
		<constructor-arg ref="pageLocationResolver" />
		<property name="defaultPageHandler" ref="default" />
		<property name="interceptors">
			<list>
				<ref bean="noCacheInterceptor" />
				<ref bean="themeChangeInterceptor" />
			</list>
		</property>
	</bean>
	
	<bean class="org.riotfamily.common.web.view.freemarker.RiotFreeMarkerViewResolver">
		<property name="cache" value="${website-servlet.cacheViews=true}" />
		<property name="exposeRequestAttributes" value="true" />
	</bean>
	
	<util:map id="freemarkerVariables">
		<entry key="url"><bean class="org.riotfamily.common.web.view.freemarker.EncodeUrlMethod" /></entry>
		<entry key="include"><bean class="org.riotfamily.common.web.view.freemarker.IncludeMethod" /></entry>
		<entry key="isExternal"><bean class="org.riotfamily.common.web.view.freemarker.ExternalUrlMethod" /></entry>
		<entry key="stamp"><bean class="org.riotfamily.common.web.view.freemarker.AddTimestampMethod" /></entry>
	</util:map>
	
	<bean id="themeResolver" class="org.springframework.web.servlet.theme.SessionThemeResolver">
		<property name="defaultThemeName" value="01" />
	</bean>
	
	<bean id="themeSource" class="org.springframework.ui.context.support.ResourceBundleThemeSource" />
			 
</beans>