<?xml version="1.0" encoding="UTF-8"?>
<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:override="http://www.riotfamily.org/schema/common/override"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.springframework.org/schema/util
		http://www.springframework.org/schema/util/spring-util-2.5.xsd
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
		http://www.riotfamily.org/schema/common/override
		http://www.riotfamily.org/schema/common/override-7.0.xsd
		http://www.riotfamily.org/schema/components/component
		http://www.riotfamily.org/schema/components/component-7.0.xsd">

	<import resource="riot-config/setup.xml" />

	<bean id="fileStore" class="org.riotfamily.media.store.DefaultFileStore">
		<property name="uriPrefix"><value>/media</value></property>
		<property name="storagePath"><value>${riot.media.storagePath}</value></property>
	</bean>
	
