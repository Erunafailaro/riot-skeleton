<?xml version="1.0" encoding="UTF-8"?>
<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:override="http://www.riotfamily.org/schema/common/override"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.springframework.org/schema/util
		http://www.springframework.org/schema/util/spring-util-2.0.xsd
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
		http://www.riotfamily.org/schema/common/override
		http://www.riotfamily.org/schema/common/override-8.0.xsd">
	 
   	<!-- Custom color scheme -->
   	<override:put ref="cssProperties">
		<entry key="highlight" value="#cb0038" />
	</override:put>

	<bean id="galleryThumb" class="org.riotfamily.media.processing.ThumbnailCreator">
		<constructor-arg ref="imageMagick" />
		<property name="variant" value="thumb" />
		<property name="width" value="110" />
		<property name="height" value="90" />
	</bean>

	<!-- Themes used for the sites -->
	<util:list id="themes">
		<value>green</value>
		<value>red</value>
	</util:list>

	<!-- 
	<s:group id="start">
		<s:list id="pets">
			<s:dao>
				<bean class="HqlDao">
				</bean>
			</s:dao>
			<s:columns>
				<s:column property="id" />
				<s:column property="image">
					<ref bean="imageRenderer" />
				</s:column>
			</s:columns>
			<s:commands>
				<ref bean="editCommand" />
				<ref bean="addCommand" />
