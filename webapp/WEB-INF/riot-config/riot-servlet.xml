	</s:group>
	-->
	
	<override:add ref="rootScreens">
		<ref bean="sitemap" />	
		<bean id="pets" class="org.riotfamily.core.screen.list.ListScreen">
			<property name="dao">
				<bean class="org.riotfamily.riot.hibernate.dao.HqlDao" autowire="constructor">
					<property name="entityClass" value="org.riotfamily.example.petstore.Pet" />
				</bean>
			</property>
			<property name="columns">
				<list>
					<bean class="org.riotfamily.core.screen.list.ColumnConfig">
						<property name="property" value="id" />
					</bean>
					<bean class="org.riotfamily.core.screen.list.ColumnConfig">
						<property name="property" value="name" />
					</bean>
					<!-- 
					<bean class="org.riotfamily.core.screen.list.ColumnConfig">
						<property name="property" value="image" />
						<property name="renderer" ref="imageRenderer" />
					</bean>
					 -->
				</list>
			</property>
			<property name="commands">
				<list>
					<bean class="org.riotfamily.core.command.impl.EditCommand" />
					<bean class="org.riotfamily.core.command.impl.DeleteCommand" />
					<bean class="org.riotfamily.core.command.impl.AddCommand" />
				</list>
			</property>
			<property name="itemScreen">
				<bean id="pet" class="org.riotfamily.core.screen.form.FormScreen" autowire="constructor" />
			</property>
		</bean>
	</override:add>
	 
</beans>