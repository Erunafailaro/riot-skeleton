<?xml version="1.0" encoding="UTF-8"?>
<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:override="http://www.riotfamily.org/schema/common/override"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.springframework.org/schema/util
		http://www.springframework.org/schema/util/spring-util-2.0.xsd
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
		http://www.riotfamily.org/schema/common/override
		http://www.riotfamily.org/schema/common/override-7.0.xsd">

	<import resource="website-controllers.xml" />

	<override:properties ref="pageHandlerMapping">
		<property name="defaultPageHandler" ref="default" />
	</override:properties>
	
	<bean id="localeResolver" class="org.riotfamily.pages.SiteLocaleResolver">
		<constructor-arg ref="pageResolver" />
		<!-- You can also set a fallback resolver if the main resolver can't resolve the locale...
		<property name="fallbackResolver">
			<bean class="org.springframework.web.servlet.i18n.AcceptHeaderLocaleResolver" />
		</property>
		-->
	</bean>	

	<override:properties ref="folderFilterPlugin" >		
		<property name="siteChooserUrl" value="/siteChooser.html" />
	</override:properties> 

	<bean class="org.riotfamily.common.web.mapping.AdvancedBeanNameHandlerMapping">
		<property name="order" value="1" />
		<property name="stripServletMapping" value="false" />
		<property name="interceptors">
			<list>
				<ref bean="riotInterceptors" />
			</list>
		</property>
	</bean>

	<bean id="viewNameTranslator" class="org.springframework.web.servlet.view.DefaultRequestToViewNameTranslator">
		<property name="suffix" value=".ftl" />
	</bean>

	<override:properties ref="freemarkerConfig">
		<property name="useTemplateCache" value="false" />
		<property name="templateUpdateDelay" value="1" />
	</override:properties>
	
</beans>