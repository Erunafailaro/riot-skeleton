<?xml version="1.0" encoding="UTF-8"?>
<form-config
	xmlns="http://www.riotfamily.org/schema/forms/form-config"
	xmlns:riot="http://www.riotfamily.org/schema/riot/form-elements"
	xmlns:page="http://www.riotfamily.org/schema/pages/form-elements"
	xmlns:content="http://www.riotfamily.org/schema/components/form-elements"
	xmlns:media="http://www.riotfamily.org/schema/media/form-elements"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.riotfamily.org/schema/forms/form-config
		http://www.riotfamily.org/schema/forms/form-config-7.0.xsd
		http://www.riotfamily.org/schema/pages/form-elements
		http://www.riotfamily.org/schema/pages/form-elements-7.0.xsd
		http://www.riotfamily.org/schema/media/form-elements
		http://www.riotfamily.org/schema/media/form-elements-7.0.xsd
		http://www.riotfamily.org/schema/components/form-elements
		http://www.riotfamily.org/schema/components/form-elements-7.0.xsd
		http://www.riotfamily.org/schema/riot/form-elements
		http://www.riotfamily.org/schema/riot/form-elements-7.0.xsd">

	<form id="headline">
		<textfield bind="anchor" regex="[A-Za-z0-9_-]*" />
	</form>

	<form id="table">
		<checkbox bind="showHeadings" default="checked" />
		<numberfield bind="rows" min-value="1" required="true" />
		<numberfield bind="cols" min-value="1" required="true" />
	</form>

	<form id="image">
		<selectbox bind="class" required="true"
			label-message-key="image.class." append-label="true">
			<option value="block" />
			<option value="right" />
			<option value="left" />
		</selectbox>
		<checkbox bind="clear" />
		<textarea bind="caption" />
	</form>

	<form id="lightbox-image">
		<textfield bind="title" />
		<media:image-upload bind="image"
			max-width="1024" max-height="768"
			crop="false" required="true" />
	</form>

	<form id="paragraph">
		<checkbox bind="clear" />
	</form>

</form-config>