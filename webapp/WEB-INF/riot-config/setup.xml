<?xml version="1.0" encoding="UTF-8"?>
<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:p="http://www.riotfamily.org/schema/pages/page"
	xmlns:media="http://www.riotfamily.org/schema/media/setup"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
		http://www.riotfamily.org/schema/pages/page
		http://www.riotfamily.org/schema/pages/page-7.0.xsd
		http://www.riotfamily.org/schema/media/setup
		http://www.riotfamily.org/schema/media/setup-7.0.xsd ">
	
	<p:setup>
		<p:site locale="en" prefix="/en" name="English" theme="green">
			<p:site locale="de_DE" prefix="/de" name="German" theme="red" />
		</p:site>
 		<p:page path-component="welcome" system="true" />
 		<p:page path-component="look-around" system="false" />
 		<p:page path-component="start-playing" system="false">
 			<p:page path-component="sub-1" handler-name="wide">
 				<p:prop key="title" value="Wide page" />
 			</p:page>
 			<p:page path-component="sub-2" handler-name="wide" />
 		</p:page>
 		<p:page handler-name="select-handler" folder="true" system="true">
	 		<p:page handler-name="default" path-component="test" system="false" />
 		</p:page>
	</p:setup>
	
	<p:handler-name parent="select-handler" child="default,wide" />

</beans>