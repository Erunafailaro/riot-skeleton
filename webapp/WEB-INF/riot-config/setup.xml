<?xml version="1.0" encoding="UTF-8"?>
<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:media="http://www.riotfamily.org/schema/media/setup"
	xmlns:p="http://www.riotfamily.org/schema/pages/page"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
		http://www.riotfamily.org/schema/pages/page
		http://www.riotfamily.org/schema/pages/page-9.0.xsd
		http://www.riotfamily.org/schema/media/setup
		http://www.riotfamily.org/schema/media/setup-9.0.xsd">
	
	<bean id="defaultPageController" class="org.riotfamily.website.controller.CacheableViewController">
		<property name="viewName" value="pages/default.ftl" />
	</bean>
	
	<p:schema default-suffix=".html">
		<p:root-page>
		
			<bean class="org.riotfamily.pages.controller.FolderController" />
			
			<p:type name="default">
				<ref bean="defaultPageController" />
				<p:type-ref name="default" />
			</p:type>
			
			<p:system-page name="home">
				<ref bean="defaultPageController" />
				<!-- 
				<p:prop key="title" value="Hello World" />
				 -->
			</p:system-page>
			
			<p:system-page name="news" suffix=".html,.rss">
				<ref bean="defaultPageController" />
			</p:system-page>
			
			<p:system-page name="test">
				<ref bean="defaultPageController" />
			</p:system-page>
		
		</p:root-page>
	</p:schema>

</beans>