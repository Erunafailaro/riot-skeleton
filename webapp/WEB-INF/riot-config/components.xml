<?xml version="1.0" encoding="UTF-8"?>
<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:c="http://www.riotfamily.org/schema/components/component"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
		http://www.riotfamily.org/schema/components/component
		http://www.riotfamily.org/schema/components/component-7.0.xsd">

	<c:view-component id="table" view-name="components/table.ftl">
		<c:defaults>
			<entry key="showHeadings"><value type="java.lang.Boolean">true</value></entry>
			<entry key="rows"><value type="java.math.BigDecimal">3</value></entry>
			<entry key="cols"><value type="java.math.BigDecimal">3</value></entry>
		</c:defaults>
	</c:view-component>

	<c:view-component id="group" view-name="components/group.ftl" dynamic="true" />

</beans>